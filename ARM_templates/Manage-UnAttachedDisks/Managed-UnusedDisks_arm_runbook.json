{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "automationAccountName":{
            "type": "string",
            "metadata": {
                "description": "automation account name..."
            }
        }
    },
    "resources" : [
        {
            "apiVersion": "2019-06-01",
            "type": "Microsoft.Automation/automationAccounts/runbooks",
            "name":"[concat(parameters('automationAccountName'),'/Tag-UnAttachedDisks')]",
            "location":"[resourceGroup().location]",
            "properties": {
                "description": "a runbook that tag disk that are unattached for x days",
                "runbookType": "PowerShell",
                "logProgress": false,
                "logVerbose": true,
                "publishContentLink": {
                    "uri": "https://raw.githubusercontent.com/CloudTeam-IL/azure-finops/main/ARM_templates/Manage-UnAttachedDisks/Tag-UnAttachedDisks.ps1",
                    "version": "1"
                }
            }
        },
        {
            "apiVersion": "2015-10-31",
            "type": "Microsoft.Automation/automationAccounts/runbooks",
            "name":"[concat(parameters('automationAccountName'),'/Delete-TaggedDisks')]",
            "location":"[resourceGroup().location]",
            "properties": {
                "description": "A runbook that deletes disks with specific tag",
                "runbookType": "PowerShell",
                "logProgress": false,
                "logVerbose": true,
                "publishContentLink": {
                    "uri": "https://raw.githubusercontent.com/CloudTeam-IL/azure-finops/main/ARM_templates/Manage-UnAttachedDisks/DeleteTaggedDisks.ps1",
                    "version": "1"
                }
            }
        },
        {
            "apiVersion": "2015-10-31",
            "type": "Microsoft.Automation/automationAccounts/runbooks",
            "name":"[concat(parameters('automationAccountName'),'/Delete-OldSnapshots')]",
            "location":"[resourceGroup().location]",
            "properties": {
                "description": "A runbook that deletes disks with specific tag",
                "runbookType": "PowerShell",
                "logProgress": false,
                "logVerbose": true,
                "publishContentLink": {
                    "uri": "https://raw.githubusercontent.com/CloudTeam-IL/azure-finops/main/ARM_templates/Manage-UnAttachedDisks/DeleteOldSnapshots.ps1",
                    "version": "1"
                }
            }
        }
    ]
}