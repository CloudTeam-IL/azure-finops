{
  "properties": {
    "displayName": "Allowed virtual machine's OS Disks type",
    "policyType": "Custom",
    "mode": "All",
    "description": "This policy enables you to specify a set of OS Disk SKUs that your organization can deploy.",
    "metadata": {
      "version": "1.0.1"
    },
    "parameters": {
      "effect": {
        "type": "String",
        "defaultValue": "deny",
        "metadata": {
          "displayName": "Effect",
          "description": "Audit or Deny Mode"
        },
        "allowedValues": ["audit", "deny"]
      },
      "listOfAllowedSKUs": {
        "type": "Array",
        "defaultValue": ["Standard_LRS", "StandardSSD_LRS"],
        "metadata": {
          "description": "The list of size SKUs that can be specified for OS Disks.",
          "displayName": "Allowed Size SKUs"
        },
        "allowedValues": [
          "Standard_LRS",
          "Premium_LRS",
          "StandardSSD_LRS",
          "UltraSSD_LRS",
          "Premium_ZRS",
          "StandardSSD_ZRS"
        ]
      },
      "excludeTagName": {
        "type": "String",
        "defaultValue": "candidate",
        "metadata": {
          "description": "Exclusion tag name.",
          "displayName": "Exclusion tag name."
        }
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Compute/disks"
          },
          {
            "field": "Microsoft.Compute/disks/sku.name",
            "notIn": "[parameters('listOfAllowedSKUs')]"
          },
          {
            "field": "Microsoft.Compute/disks/osType",
            "exists": true
          },
          {
            "field": "Microsoft.Compute/disks/osType",
            "in": ["Linux", "Windows"]
          },
          {
            "anyOf": [
              {
                "field": "tags[managed_by]",
                "notEquals": "terraform"
              },
              {
                "field": "tags",
                "notContainsKey": "[parameters('excludeTagName')]"
              },
              {
                "field": "[concat('tags[', parameters('excludeTagName'), ']')]",
                "notEquals": "exclude"
              }
            ]
          },
          {
            "anyOf": [
              {
                "field": "tags['cost-environment']",
                "notLike": "prod*"
              },
              {
                "field": "tags['cost-environment']",
                "equals": "prodtesting"
              }
            ]
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
