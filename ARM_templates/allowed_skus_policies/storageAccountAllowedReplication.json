{
  "properties": {
    "displayName": "Allowed Replication Types for the storage accounts",
    "policyType": "Custom",
    "mode": "All",
    "description": "Audit or deny Replication Types for the storage accounts",
    "metadata": {
      "version": "1.0.0",
      "category": "Storage"
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Storage/storageAccounts"
          },
          {
            "field": "Microsoft.Storage/storageAccounts/sku.name",
            "notIn": "[parameters('allowedReplicationTypes')]"
          },
          {
            "anyOf": [
              {
                "field": "tags[managed_by]",
                "notEquals": "terraform"
              },
              {
                "field": "tags",
                "notContainsKey": "[parameters('excludeTagName')]"
              },
              {
                "field": "[concat('tags[', parameters('excludeTagName'), ']')]",
                "notEquals": "exclude"
              }
            ]
          },
          {
            "anyOf": [
              {
                "field": "tags['cost-environment']",
                "notLike": "prod*"
              },
              {
                "field": "tags['cost-environment']",
                "equals": "prodtesting"
              }
            ]
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    },
    "parameters": {
      "allowedReplicationTypes": {
        "type": "Array",
        "metadata": {
          "displayName": "Allowed Replication Types",
          "description": "Allowed Replication Types for the storage accounts",
          "strongType": "storageSkus"
        }
      },
      "excludeTagName": {
        "type": "String",
        "defaultValue": "candidate",
        "metadata": {
          "description": "Exclusion tag name.",
          "displayName": "Exclusion tag name."
        }
      },
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "effect",
          "description": "effect of the policy"
        },
        "defaultValue": "Audit",
        "allowedValues": ["Audit", "Deny"]
      }
    }
  }
}
