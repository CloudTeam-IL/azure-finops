{
    "properties": {
        "displayName": "Allowed EventHub SKUs",
        "policyType": "Custom",
        "mode": "All",
        "description": "This policy enables you to specify a set of EventHub SKUs that your organization can deploy.",
        "metadata": {
            "version": "1.0.1",
            "category": "Streaming"
        },
        "policyRule": {
            "if": {
                "allOf": [
                    {
                        "field": "microsoft.insights/autoscalesettings/targetResourceUri",
                        "contains": "Microsoft.ServiceBus/namespaces"
                    },
                    {
                        "field": "microsoft.insights/autoscalesettings/enabled",
                        "equals": false
                    }
                ]
            },
            "then": {
                "effect": "modify",
                "roleDefinitionIds": 
                [
                    "/providers/microsoft.authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
                ],
                "operations": [
                    {
                        "operation": "addOrReplace",
                        "field": "tags['Cnadidate-AutoScale']",
                        "value": "Not Enabled"
                    }
                ]
            }
        }
    }
}